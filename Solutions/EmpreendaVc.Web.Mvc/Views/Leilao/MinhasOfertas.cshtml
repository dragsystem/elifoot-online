@model IEnumerable<EmpreendaVc.Domain.Leilao>
@using EmpreendaVc.Web.Mvc.Util
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>
    Leilão - Minhas Ofertas</h2>
<div id="leilao-lista" class="caixa">
    <h1>
        Opções</h1>
    <a href="@Url.Action("Index", "Leilao")">Leilão</a><br />
    <a><b>Minhas Ofertas</b></a><br />
    <a href="@Url.Action("MeusJogadores", "Leilao")">Meus Jogadores</a><br />
</div>
<div id="leilao-tabela">
    <table class="classificacao" cellpadding="0" cellspacing="0">
        <tr>
            <th width="30%">
                Nome
            </th>
            <th width="30%">
                Clube
            </th>
            <th width="15%">
                Divisão
            </th>
            <th width="5%">
                Posição
            </th>
            <th width="5%">
                H
            </th>
            <th width="10%">
                Valor
            </th>
            <th width="5%">
                Ação
            </th>
        </tr>
        @if (Model.Count() > 0)
        {
            foreach (var item in Model)
            {
            <tr>
                <td>@item.Jogador.Nome
                </td>
                <td>@item.Jogador.Clube.Nome
                </td>
                <td>@item.Jogador.Clube.Divisao.Nome
                </td>
                <td>@Util.RetornaPosicao(item.Jogador.Posicao)
                </td>
                <td>@item.Jogador.H
                </td>
                <td>
                    $@item.Valor.ToString("N2")
                </td>
                <td>
                    <a class="leilao-proposta" href="@Url.Action("Detalhe", "Leilao", new { id = item.Id })" title="Alterar Proposta">
                    </a><a class="leilao-cancelar" href="@Url.Action("CancelarOferta", "Leilao", new { id = item.Id })" title="Cancelar Proposta">
                    </a>
                </td>
            </tr>
            }

        }
        else
        {
            <tr>
                <td colspan="7">
                    Você não efetuou nenhuma oferta.
                </td>
            </tr>
        }
    </table>
</div>
