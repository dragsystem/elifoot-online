@model EmpreendaVc.Domain.Patrocinio
@using EmpreendaVc.Web.Mvc.Util
@using MvcContrib
@using MvcContrib.FluentHtml
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var controle = (EmpreendaVc.Domain.Controle)ViewBag.Controle;
    var clube = (EmpreendaVc.Domain.Clube)ViewBag.Clube;
    var rep = Convert.ToInt32(Math.Ceiling((decimal)Model.ValorMax / 10000000));
}

<h2>@Model.Nome</h2>
@{ Html.RenderAction("Index", "Mensagem"); }

<div id="left">
    <div id="patrocinio-tabela">
        <table class="classificacao" cellpadding="0" cellspacing="0">
            <tr>
                <th>Clubes com contrato</th>
                <th>Reputação</th>
            </tr>
            <tr>
                <td>@Model.PatrocinioClubes.Count()</td>
                <td>
                    <img src="@Url.Content("~/Content/img/star." + rep + ".png")" />
                </td>
            </tr>
        </table>
    </div>
</div>
<div id="right">
    <div id="plantel-menu">
        @if (Model.PatrocinioClubes.Where(x => x.Clube.Id == clube.Id).Count() == 0)
        {
            <a class="botao" href="@Url.Action("PatrocinioOferta", "Patrocinio", new { id = Model.Id })">Negociar</a><br />
        }
        else
        {
            <a class="botao" href="@Url.Action("PatrocinioEncerrar", "Patrocinio", new { id = Model.Id })">Encerrar Contrato</a><br />
        }
    </div>
</div>

<div class="clear">

<a class="voltar-link" href="javascript:history.back()">VOLTAR</a>
