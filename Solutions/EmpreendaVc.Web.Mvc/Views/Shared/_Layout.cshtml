<html dir="ltr" lang="pt-BR">
<head id="Head1" runat="server">
    <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
    <meta http-equiv="X-UA-Compatible" content="IE=100" >
    <title>FUTMANAGER.NET</title>
    @*<link type="image/x-icon" href="@Url.Content("~/Content/img/favicon.ico")" rel="shortcut icon" />*@
    <link type="image/png" href="@Url.Content("~/Content/img/favicon.png")" rel="icon" />
    <link type="text/css" href="@Url.Content("~/Content/css/style.css")" rel="stylesheet" />
    <link type="text/css" href="@Url.Content("~/Content/css/jquery-ui.css")" rel="stylesheet" />
    <link href='http://fonts.googleapis.com/css?family=PT+Sans' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Ubuntu' rel='stylesheet' type='text/css'>
    <script type="text/javascript" src="@Url.Content("~/Content/js/jquery-1.9.1.js")" ></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/jquery-ui.js")"></script>
    <!-- The HTML5 Shim is required for older browsers, mainly older versions IE -->
    <!--[if lt IE 9]>
		<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
	<![endif]-->
    <script type="text/javascript">
        $(function () {
            $(document).tooltip();

            var wid = $(document).width();
            var hei = $(document).height();
            $('#loading').attr("style", "width:" + wid + "px; height: " + hei + "px;");

            $('.botao, input:submit').click(function () {
                $('#loading').fadeIn();
            });
        });
    </script>
    <style type="text/css">
        .ui-tooltip { background: #333; padding: 5px 5px; color: #fff; border-radius: 2px; font: 12px 'Ubuntu', Sans-Serif; border: none; box-shadow:none; }
    </style>
</head>
<body>
    <div id="loading">
        <div id="loading-image">
            <img src="@Url.Content("~/Content/img/loading.gif")" alt="carregando" />
        </div>
    </div>
    <div id="main">
        <div id="header">
            <div id="logo">
                <a id="linklogo" href="@Url.Action("Index", "Home")"></a>
            </div>
            <div id="menu">
                @{ Html.RenderAction("MenuTop", "Conta"); }
            </div>
            <div id="datacontrole">
                @{ Html.RenderAction("DataTop", "Conta"); }
            </div>
            <div class="clear"></div>
        </div>
        <div id="conteudo">
            @RenderBody()
        </div>
        <div class="clear">
        </div>
        <div id="footer">
            <div id="footer-logo"></div>
            <span><a href="@Url.Action("Index", "Home")">Home</a></span>
            <span><a href="@Url.Action("Cadastro", "Conta")">Cadastrar</a></span>
            <span><a href="@Url.Action("Regras", "Home")">Regras</a></span>
            <span><a href="@Url.Action("Contato", "Home")">Contato</a></span>
            <p style="text-align: right;">TODOS OS DIREITOS RESERVADOS</p>
        </div>
    </div>
</body>
</html>
