@model IEnumerable<EmpreendaVc.Domain.Clube>
@using EmpreendaVc.Web.Mvc.Util
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>
    Emprego</h2>
@{ Html.RenderAction("Index", "Mensagem"); }
<div>
    <table class="classificacao" cellpadding="0" cellspacing="0">
        <tr>
            <th width="30%">CLUBE</th>
            <th width="30%">DINHEIRO</th>
            <th width="30%">DIVISÃO</th>
            <th width="10%">AÇÃO</th>
        </tr>
        @if (Model.Count() > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td style="text-align: left;">@item.Nome</td>
                    <td>$@item.Dinheiro.ToString("N2")</td>
                    <td>@item.Divisao.Nome</td>
                    <td>
                        <a id="emprego-pedido" title="Pedir Cargo de Treinador" href="@Url.Action("Proposta", "Clube", new { id = item.Id })"></a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6"><i>Nenhum clube interessado.</i></td>
            </tr>
        }
    </table>
</div>
