@model EmpreendaVc.Domain.Divisao
@{
    var clube = (EmpreendaVc.Domain.Clube)ViewBag.Clube; 
}

<h2>@Model.Nome
    <div class="legenda">
        <b>P</b> Pontos
        <b>J</b> Jogos
        <b>V</b> Vitórias
        <b>E</b> Empates
        <b>D</b> Derrotas
        <b>GP</b> Gols Pro<br />
        <b>GC</b> Gols Contra
        <b>SG</b> Saldo Gols
        <b>%</b> Aproveitamento
    </div>
</h2>

<table class="classificacao" cellpadding="0" cellspacing="0">
    <tr>
            <th>Clube</th>
            <th>P</th>
            <th>J</th>
            <th>V</th>
            <th>E</th>
            <th>D</th>
            <th>GP</th>
            <th>GC</th>
            <th>SG</th>
            <th>%</th>
        </tr>
        @foreach (var item in Model.DivisaoTabela.OrderByDescending(x => x.Pontos))
        {
            var style = "";
            if (clube.Id == item.Clube.Id)
            {
                style = "style='font-weight:bold;'";
            }
            else
            {
                style = "";
            }
            <tr @style>
                <td style="text-align: left;">@(item.Posicao). @item.Clube.Nome</td>
                <td>@item.Pontos</td>
                <td>@item.J</td>
                <td>@item.V</td>
                <td>@item.E</td>
                <td>@item.D</td>
                <td>@item.GP</td>
                <td>@item.GC</td>
                <td>@item.Saldo</td>
                <td>@item.Aproveitamento.ToString("N2")</td>
            </tr>
        }
        
    </table>
</table>
