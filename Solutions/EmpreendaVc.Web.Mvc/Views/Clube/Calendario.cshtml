@model IEnumerable<EmpreendaVc.Domain.Partida>
@using EmpreendaVc.Web.Mvc.Util
@{
    ViewBag.Title = "Plantel";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var clube = (EmpreendaVc.Domain.Clube)ViewBag.Clube;
    var id = (int)ViewBag.ClubeId;
    var dia = (int)ViewBag.Dia;
}
<h2>
    Calendário</h2>
<div id="left">
    <div id="calendario-tabela">
        <table class="classificacao" cellpadding="0" cellspacing="0">
            <tr>
                <th width="25%">
                    Adversário
                </th>
                <th width="10%">
                    Data
                </th>
                <th width="37%">
                    Competição
                </th>
                <th width="5%">
                </th>
                <th width="8%">
                    Resultado
                </th>
                <th width="15%">
                    Público
                </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if ((item.Clube1.Id == clube.Id && id == 0) || (item.Clube1.Id == id))
                        { 
                            <a href="@Url.Action("Index", "Clube", new { id = item.Clube2.Id })">@item.Clube2.Nome </a>
                        }
                        else
                        { 
                            <a href="@Url.Action("Index", "Clube", new { id = item.Clube2.Id })">@item.Clube1.Nome </a>
                        }
                    </td>
                    <td>@(DateTime.Now.AddDays(item.Dia - dia).ToShortDateString())
                    </td>
                    <td>
                        @if (item.Tipo == "DIVISAO")
                        { 
                            <a href="@Url.Action("Classificacao", "Clube", new { iddivisao = clube.Divisao.Id })">@clube.Divisao.Nome </a>
                        }
                        else
                        {
                            @:<a href="@Url.Action("Taca", "Clube")"><span style="font-size: 10px;">
                            if (item.Rodada == 16)
                            {
                                @: TAÇA - 1ª Eliminatória - @(item.Mao)ª Mão
                            }
                            else if (item.Rodada == 8)
                            {
                                @: TAÇA - Oitavas de Final - @(item.Mao)ª Mão
                            }
                            else if (item.Rodada == 4)
                            {
                                @: TAÇA - Quartas de Final - @(item.Mao)ª Mão
                            }
                            else if (item.Rodada == 2)
                            {
                                @: TAÇA - Semi Final - @(item.Mao)ª Mão
                            }
                            else if (item.Rodada == 1)
                            {
                                @: TAÇA - FINAL - @(item.Mao)ª Mão
                            }
                            @:</span></a>
                        }
                    </td>
                    <td>
                        @if ((item.Clube1.Id == clube.Id && id == 0) || (item.Clube1.Id == id))
                        {
                            @: C
                    }
                        else
                        { 
                            @: F
                                        }
                    </td>
                    <td>
                        @if (item.Realizada)
                        {
                            if ((item.Clube1.Id == clube.Id && id == 0) || (item.Clube1.Id == id))
                            {
                            @: @item.Gol1 x @item.Gol2
                        }
                            else
                            { 
                            @: @item.Gol2 x @item.Gol1
                        }
                        }
                        else
                        { 
                            @: -
                                        }
                    </td>
                    <td>
                        @if (item.Realizada)
                        {
                            @: @item.Publico.ToString("N0")
                    }
                        else
                        {
                            @: -
                                        }
                    </td>
                </tr>    
            }
        </table>
    </div>
</div>
<div id="right">
    @{ Html.RenderAction("_Menu", "Clube"); }
</div>