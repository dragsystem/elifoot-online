@model EmpreendaVc.Domain.Usuario
@{
    Layout = "~/Views/SendMail/_LayoutEmail.cshtml";
}

<div style="margin-left:7px; margin-top: 40px;">
<table style="font-family: Arial; font-size: 16px; color: #333;">
    <tr>
        <td>
            Caro <span style="color:#1B3C7F; font-weight:bold;">@ViewBag.NomeUsu</span>,
        </td>
    </tr>
    <tr>
        <td>
            <p>Sua senha foi resetada.</p>

            <p>A nova senha é: @ViewBag.Password
            </p>
            
            <p>Qualquer dúvida entre em contato com nossa equipe!</p>

            <p>Obrigado por fazer parte de nossa comunidade.</p>
        </td>
    </tr>
</table>
</div>