@model IEnumerable<EmpreendaVc.Domain.Staff>
@{
    Layout = "~/Views/Shared/_LayoutAdm.cshtml";
}
<div id="content">
    <h2>
        Grupos</h2>
    @if (TempData["AdmError"] != null && (bool)TempData["AdmError"])
    {
        <div class="message errormsg" style="display: block;">
            <p>
                Desculpe, ocorreu um erro no envio dos dados.</p>
        </div>
    }
    <a href="@Url.Action("GerarStaff", "Engine")">GERAR STAFF</a>
    <form action="" method="post">
    <table cellpadding="0" cellspacing="0" width="100%" class="sortable">
        <thead>
            <tr>
                <th class="header" style="cursor: pointer;">
                    Nome
                </th>
                <th class="header" style="cursor: pointer;">
                    H
                </th>
                <th class="header" style="cursor: pointer;">
                    Usuário
                </th>
                <th class="header" style="cursor: pointer;">
                    Tipo
                </th>
            </tr>
        </thead>
        @if (Model.Count() > 0)
        {
            foreach (var item in Model.OrderBy(p => p.Nome).ThenBy(x => x.H))
            { 
                        
            <tr>
                <td>
                    @item.Nome
                </td>
                <td>
                    @item.H
                </td>
                <td>
                    @(item.Usuario != null ? item.Usuario.NomeCompleto : "-")
                </td>
                <td>
                    @(item.Tipo == 1 ? "Olheiro" : "Médico")
                </td>
            </tr>
            }
        }
        <tbody>
        </tbody>
    </table>
    </form>
</div>
